<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:arta="urn:import:kz.arta.synergy.components.client"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="kz.arta.synergy.components.client.resources.ImageResources" field="images"/>
    <ui:style>

        .locales {
            float: right;
            margin-right: 10px;
        }
        .themes {
            float: right;
            margin-right: 10px;
        }
        .about {
            float: right;
            margin-right: 10px;
        }
        .navigationLabel {
            display: inline-block;
        }
        .layer {
            border: 1px black solid;
        }
    </ui:style>
    <g:LayoutPanel>
        <g:layer left="0%" right="0%" height="7%" top="0%">
            <g:FlowPanel styleName="{style.layer}">
                <g:Label text="ShowCase" styleName="{style.navigationLabel}"/>
                <g:Button ui:field="about" text="About" styleName="{style.about}"/>
                <arta:ComboBox ui:field="themesCombo" addStyleNames="{style.themes}"/>
                <arta:ComboBox ui:field="localesCombo" addStyleNames="{style.locales}"/>
            </g:FlowPanel>
        </g:layer>
        <g:layer left="0%" width="15%" top="9%" bottom="0%">
            <g:FlowPanel styleName="{style.layer}">
                <g:Label text="Навигация"/>
                <g:Tree ui:field="tree">
                    <g:TreeItem text="Кнопки" ui:field="treeButtons">
                        <g:TreeItem text="Простые кнопки" ui:field="treeSimpleButtons"/>
                        <g:TreeItem text="Кнопки с иконкой" ui:field="treeButtonsWithIcons"/>
                        <g:TreeItem text="Кнопки" ui:field="treeColorButtons"/>
                    </g:TreeItem>
                    <g:TreeItem text="Диалог" ui:field="treeDialog">
                        <g:TreeItem text="Диалог без кнопок" ui:field="treeDialogNoButtons"/>
                        <g:TreeItem text="Диалог с кнопками" ui:field="treeDialogYesButtons"/>
                    </g:TreeItem>
                </g:Tree>
            </g:FlowPanel>
        </g:layer>
        <g:layer right="0%" width="83%" top="9%" bottom="0%">
            <g:SimpleLayoutPanel styleName="{style.layer}">
                <g:TabLayoutPanel barHeight="30" barUnit="PX" ui:field="tabPanel">
                </g:TabLayoutPanel>
            </g:SimpleLayoutPanel>
        </g:layer>

    </g:LayoutPanel>
</ui:UiBinder>