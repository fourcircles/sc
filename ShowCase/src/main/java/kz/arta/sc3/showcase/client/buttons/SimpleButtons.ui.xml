<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:arta='urn:import:kz.arta.synergy.components.client.button'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .button {
            margin-left: 10px;
            margin-bottom: 10px;
        }
    </ui:style>
    <g:FlowPanel>
        <arta:SimpleButton text="Простая кнопка" addStyleNames="{style.button}"/>
        <arta:SimpleButton text="Неактивная кнопка" enabled="false" addStyleNames="{style.button}"/>
        <arta:SimpleButton text="Кнопка с кликом" addStyleNames="{style.button}" ui:field="buttonClick"/>
        <arta:ContextMenuButton text="Кнопка с кликом" width="140px" addStyleNames="{style.button}"/>
    </g:FlowPanel>
</ui:UiBinder>